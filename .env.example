# Application Configuration
APP_NAME=audityzer
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=false

# Server Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=db.audityzer.internal
DB_PORT=5432
DB_NAME=audityzer_prod
DB_USER=audityzer_user
DB_PASSWORD=change_me_in_production
DB_POOL_SIZE=20
DB_TIMEOUT=30

# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=audityzer-assets

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=romanchaa997
DOCKER_PASSWORD=your_registry_token

# Kubernetes Configuration
KUBERNETES_NAMESPACE=audityzer-prod
KUBERNETES_CLUSTER=audityzer-prod-cluster

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Security Configuration
JWT_SECRET=your_jwt_secret_key
API_KEY=your_api_key
ENCRYPTION_KEY=your_encryption_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@audityzer.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#audityzer-alerts

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CUSTOM_REPORTS=true
FEATURE_API_V2=true
